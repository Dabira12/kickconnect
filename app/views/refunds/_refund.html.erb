<div id="<%= dom_id refund %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= refund.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Resolved:</strong>
    <%= refund.resolved %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this refund", refund, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this refund", edit_refund_path(refund), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
