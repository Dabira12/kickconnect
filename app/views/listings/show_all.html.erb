<div class="bg-white container -mt-0 pb-10 mx-auto" >
  <div class="flex pb-10 flex-row">
     <div class="sm:basis-1/6 hidden" >
                
                <%=render 'listings/filter'%>

      </div>
            
    <div class="mx-2  px-0 py-16 sm:px-6 sm:py-24  lg:px-8">
      <%# <h2 class="text-2xl font-bold tracking-tight text-gray-900">Customers also purchased</h2> %>
    
      <div class="mt-6 w-full grid grid-cols-2 gap-x-12 gap-y-10 lg:gap-x-12 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 xl:gap-x-12">
          <% @listings.each do |listing| %>
          <div class="col-span-1">
              <div class=" w-full overflow-hidden rounded-md  group-hover:opacity-75 ">
              
                  <%= link_to listing_path(listing.id) do%>  

                      <%=image_tag listing.cover_photo.variant(resize_and_pad: [350, 390 ,background: [242, 242, 242]])  %>

                     

                       <%# <%=image_tag listing.cover_photo.variant(resize_and_pad: [400, 400,background: [249, 249, 245]])  %> 

                       <%# <%=image_tag listing.cover_photo.variant(resize_to_fill:[300,300, no_rotate: true]) %> 
                  <% end %>
              
              
              </div>
          
              <div class="mt-4 flex justify-between">
              <div>
                  <h3 class="text-sm text-gray-700">
                

                  <p class="font-medium text-md">    <%= listing.name%></p>
                  </h3>

                  <div class="flex flex-row">
                  <div class= "pt-1">
                  <svg xmlns="http://www.w3.org/2000/svg" height="14" width="14" viewBox="0 0 448 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M122.6 46.3c-7.8-11.7-22.4-17-35.9-12.9S64 49.9 64 64V256H32c-17.7 0-32 14.3-32 32s14.3 32 32 32H64V448c0 17.7 14.3 32 32 32s32-14.3 32-32V320H228.2l97.2 145.8c7.8 11.7 22.4 17 35.9 12.9s22.7-16.5 22.7-30.6V320h32c17.7 0 32-14.3 32-32s-14.3-32-32-32H384V64c0-17.7-14.3-32-32-32s-32 14.3-32 32V256H262.5L122.6 46.3zM305.1 320H320v22.3L305.1 320zM185.5 256H128V169.7L185.5 256z"/></svg>
                  </div>
                   <p class="text-sm mb-2 font-medium text-gray-900">  <%= listing.price%></p>
                  </div>
                 
              </div>
              <p class="mt-1 text-sm text-gray-500 pr-12"><%= listing.colour%></p>
          
              </div>
              
          </div>
          
          <% end %>

          



        <!-- More products... -->
      </div>

        
      
    </div>


  <div>
</div>