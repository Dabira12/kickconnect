 <%= turbo_frame_tag 'address' do%>
  <%if default== true%>
          <div>
            <h1> Shipping Address </h1>
          </div>

          <div class = " flex flex-col border-solid border-4 " >

          <% if current_address_id == nil%>
          <div>
          <h1> You do not have any existing addresses </h1>

                  <%=link_to 'Add a New Address + ', new_address_path, data: { turbo_frame: 'modal' }, class: " underline underline-offset-1  text-bold text-green-800  font-medium" %>


         </div>




        <% else%>
        <div>

        <div>
          <%= Address.find(current_address_id).name%>
         </div>

        <div>

        <%= Address.find(current_address_id).line1%>

        </div>


          <%=link_to 'Change Address + ', addresses_path, data: { turbo_frame: 'modal' }, class: " underline underline-offset-1  text-bold text-teal-700  font-medium" %>

        </div>

        <%end %>


         </div>
      
  <%else%>

   <div>

        <div>
          <%= Address.find(current_address_id).name%>
      </div>

      <div>

        <%= Address.find(current_address_id).line1%>

      </div>


          <%=link_to 'Change Address + ', listing_addresses_path(listing_id), data: { turbo_frame: 'modal' }, class: " underline underline-offset-1  text-bold text-teal-700  font-medium" %>

    </div>
  <%end%>

    <%end%>


